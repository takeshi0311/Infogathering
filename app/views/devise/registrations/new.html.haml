#contents.bgcolor-white.pt1em.pb1em
  #main_cnt_wrapper
    #yjContentsBody
      .yjContainer
        .form_box
          %h2
            InfoGathering
            %span 新規登録
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .label
              = f.label :username
              %br/
              = f.text_field :username, :placeholder => '名前を入力'
            .label
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, :placeholder => 'メールアドレスを入力'
            .label
              = f.label :password
              - if @validatable
                %i
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "off", :placeholder => 'パスワードを入力'
            .label
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'パスワードを入力（確認）'
            .submit
              .actions
                = f.submit
            .more_link_box
              %strong すでにアカウントを持っていますか？
              = render "devise/shared/links"
